<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/cardview"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <!--com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/plantavatarpicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:textColor="@color/secondaryColor"
            android:layout_centerVertical="true"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="#00e676"
            app:strokeWidth="0.2dp" /-->
        <ImageView
            android:id="@+id/plantavatarpicture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"

            android:scaleType="fitXY"

            android:textColor="@color/windowbackground"/>

        <TextView
            android:id="@+id/plantnametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

          android:layout_below="@id/plantavatarpicture"

            android:layout_alignLeft="@id/plantavatarpicture"
            android:paddingRight="0dp"
            android:maxLines="1"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/windowbackground"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ToggleButton
            android:id="@+id/addtofavorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/plantavatarpicture"

            android:layout_alignRight="@id/plantnametext"

            android:layout_alignParentRight="true"
             />

        <ImageView
            android:id="@+id/tree"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/plantnametext"


            app:srcCompat="@drawable/ic__tree" />
        <TextView

           android:id="@+id/firstplanted"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:layout_below="@id/plantnametext"

             android:layout_toRightOf="@+id/tree"

            android:text="Created on:"
            android:textColor="@color/windowbackground"
            android:textSize="11sp" />

        <TextView

            android:id="@+id/plantfirstdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/firstplanted"
            android:layout_below="@id/plantnametext"
            android:text="31.13.2021"

            android:textColor="@color/windowbackground"
            android:textSize="11sp" />
        <ImageView
            android:id="@+id/pages"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tree"

android:layout_marginTop="3dp"
            app:srcCompat="@drawable/ic__book" />
        <TextView
            android:id="@+id/plantpostnumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/plantfirstdate"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/pages"
            android:textColor="@color/windowbackground"

            android:text="You have "
            android:textSize="11sp"
            />

        <!--ImageView
            android:id="@+id/garbageicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" /-->


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>